body {
  -ms-overflow-style: scrollbar
  -webkit-app-region: drag
}

button, section, i {
  -webkit-app-region: no-drag;
}

main.app {
  display: grid
  border: 2px solid grey
  width: 360px

  article {
    width: 360px
  }
}

bg-black {
  background: #000
}

bg-white {
  background: #FFF
}

white {
  color: white
}

black {
  color: black
}
