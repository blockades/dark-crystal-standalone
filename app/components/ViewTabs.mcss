div.tabs {
  border-bottom: 1px solid grey
  padding: 0 0 .5rem 0
  display: grid
  grid-template-columns: auto auto
  text-align: center

  div.tab {
    border-right: 1px solid #FFFFFF

    :last-child {
      border-right: none
    }

    :hover { cursor: pointer }
  }

  div.active {
    border-bottom: 2px solid #1EAEDB
  }
}

